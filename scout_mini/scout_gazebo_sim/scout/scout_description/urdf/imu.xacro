<?xml version="1.0"?>

<!-- Reference -->
<!-- https://classic.gazebosim.org/tutorials?tut=ros_gzplugins#GPULaser -->

<robot xmlns:xacro="http://ros.org/wiki/xacro" name="scout_imu">
    <xacro:macro name="IMU" params="parent_link imu_frame *joint_pose robot_namespace:='' topic_namespace:='' topic_name:='imu'">

        <xacro:property name="topicName"    default="${topic_name}" />
        <!-- Use topic_namespace for robotNamespace (for topics), robot_namespace for frameName (for TF frames) -->
        <!-- If topic_namespace is not provided, fall back to robot_namespace for backward compatibility -->
        <xacro:property name="topicNamespace" default="${topic_namespace}" if="${topic_namespace}" />
        <xacro:property name="topicNamespace" default="${robot_namespace}" unless="${topic_namespace}" />
        <!-- frameName for IMU message frame_id: needs to include namespace prefix to match TF frames -->
        <!-- This is different from TF frame names - IMU message frame_id must match the actual TF frame name -->
        <xacro:property name="frameName"   default="${robot_namespace}/${imu_frame}" if="${robot_namespace}" />
        <xacro:property name="frameName"   default="${imu_frame}" unless="${robot_namespace}" />

        <link name="imu_link">
            <inertial>
                <mass value="0.001"/>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.0001"/>
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <box size="0.001 0.001 0.001"/>
                </geometry>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <box size=".001 .001 .001"/>
                </geometry>
            </collision>
        </link>

        <joint name="imu_joint" type="fixed">
            <axis xyz="1 0 0"/>
            <parent link="${parent_link}"/>
            <child link="imu_link"/>
            <xacro:insert_block name="joint_pose"/>
        </joint>

        <gazebo reference="imu_link">
            <gravity>true</gravity>
            <sensor name="imu_sensor" type="imu">
                <always_on>true</always_on>
                <update_rate>50</update_rate>
                <visualize>true</visualize>
                <topic>__default_topic__</topic>
                <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
                    <!-- <robotNamespace>${topicNamespace}</robotNamespace> -->
                    <topicName>${topicName}</topicName>
                    <bodyName>imu_link</bodyName>
                    <updateRateHZ>10.0</updateRateHZ>
                    <gaussianNoise>2.89e-08</gaussianNoise>
                    <xyzOffset>0 0 0</xyzOffset>
                    <rpyOffset>0 0 0</rpyOffset>
                    <frameName>${frameName}</frameName>
                    <initialOrientationAsReference>false</initialOrientationAsReference>
                </plugin>
                <pose>0 0 0 0 0 0</pose>
            </sensor>
        </gazebo>
    </xacro:macro>
</robot>
