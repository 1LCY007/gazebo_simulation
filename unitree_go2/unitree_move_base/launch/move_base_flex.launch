<launch>
  <arg name="ns" default=""/>
  <arg name="robot_gazebo_ns" default="go2_gazebo"/>

  <node pkg="mbf_costmap_nav" type="mbf_costmap_nav" respawn="false" name="move_base_flex" output="screen" required="true">
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    <param name="global_costmap/robot_base_frame" value="$(arg robot_gazebo_ns)/base"/>
    <param name="local_costmap/robot_base_frame" value="$(arg robot_gazebo_ns)/base"/>
    <param name="global_costmap/global_frame" value="map"/>
    <param name="local_costmap/global_frame" value="$(arg ns)/odom"/>
    <param name="global_costmap/scan/topic" value="go2_gazebo/scan"/>
    <param name="local_costmap/scan/topic" value="go2_gazebo/scan"/>
    <param name="global_costmap/obstacle_layer/scan/topic" value="go2_gazebo/scan"/>
    <param name="local_costmap/obstacle_layer/scan/topic" value="go2_gazebo/scan"/>
    <param name="global_costmap/static_layer/map_topic" value="/map"/>

    <rosparam file="$(find unitree_move_base)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find unitree_move_base)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find unitree_move_base)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find unitree_move_base)/config/global_costmap_params.yaml" command="load" />
    
    <!-- Move Base Flex 配置（包含 planners 和 controllers） -->
    <rosparam file="$(find unitree_move_base)/config/move_base_flex.yaml" command="load" />
    
    <!-- 规划器和控制器参数 -->
    <rosparam file="$(find unitree_move_base)/config/navfn_global_planner_params.yaml" command="load" />
    <rosparam file="$(find unitree_move_base)/config/teb_local_planner_params.yaml" command="load" />
    
    <param name="global_costmap/obstacle_layer/scan/sensor_frame" value="$(arg robot_gazebo_ns)/lidar"/>
    <param name="local_costmap/obstacle_layer/scan/sensor_frame" value="$(arg robot_gazebo_ns)/lidar"/>
    
    <!-- move_base_flex 可能需要显式设置 robot_frame 参数 -->
    <param name="robot_frame" value="$(arg robot_gazebo_ns)/base"/>
  </node>
</launch>

