<?xml version="1.0"?>

<launch>

    <arg name="robot_namespace" default="/"/>
    <arg name="world_name" default="$(find unitree_move_base)/worlds/hospital.world"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <include file="$(find scout_gazebo_sim)/launch/spawn_scout_v2.launch">
        <arg name="x" value="2.0"/>
        <arg name="y" value="10.0"/>
        <arg name="z" value="0.5"/>
        <arg name="yaw" value="1.57"/>
        <arg name="robot_namespace" value="$(arg robot_namespace)"/>
    
    </include>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find scout_description)/rviz/model_display.rviz" />
</launch>
